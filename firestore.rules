rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Permitir a cualquier usuario buscar por username, pero no listar la colecci√≥n completa.
    // Permitir a cualquier usuario leer un perfil si conoce el ID.
    // Un usuario autenticado puede crear SU PROPIO perfil, pero no el de otros.
    // Un usuario autenticado puede actualizar SU PROPIO perfil.
    match /users/{userId} {
      // Cualquier persona puede buscar en la lista (para verificar usernames)
      allow list; 
      // Cualquier persona puede leer un perfil
      allow get;
      // Solo un usuario autenticado puede crear su PROPIO perfil
      allow create: if request.auth != null && request.auth.uid == userId;
      // Solo un usuario autenticado puede actualizar SU PROPIO perfil
      allow update: if request.auth != null && request.auth.uid == userId;
    }
    
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Permitir actualizar/borrar solo al autor original.
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    match /opinions/{opinionId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Permitir actualizar/borrar solo al autor original.
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    match /replies/{replyId} {
      allow read: if true;
      allow create: if request.auth != null;
       // Permitir actualizar/borrar solo al autor original.
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    match /progress/{progressId} {
      allow read, write: if request.auth != null && request.auth.uid == progressId;
    }
  }
}
